{
	"manifest_version": 3,
	"name": "YoutubeLiveChat＋",
	"version": "0.0.3",
	"description": "Youtubeのチャットを見やすくします。",
	//"icons": {
    	//"16": "icon/icon16.png",
    	//"48": "icon/icon48.png",
    	//"128": "icon/icon128.png"
	//},
	"permissions": [
		"storage",
		"tabs"
	],
	"content_scripts": [
		{
			"matches": ["https://www.youtube.com/*"],
			"include_globs": ["*://*/*live_chat*"],
			"all_frames": true,
			"run_at": "document_end",
			"js": ["jquery-3.6.0.min.js", "content_script.js"],
			"css": ["style.css"]
		},
		{
			"matches": ["https://www.youtube.com/*"],
			"include_globs": ["*://*/*watch*"],
			"js": ["jquery-3.6.0.min.js", "streamDetail_getter.js"]
		}
	],
	"background": {
		"service_worker": "background.js"
	}
}